<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="http://lsst-sal.tuc.noao.edu/schema/SALCommandSet.xsl"?>
<SALCommandSet xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://lsst-sal.tuc.noao.edu/schema/SALCommandSet.xsd">
  <SALCommand>
    <Subsystem>ATSpectrograph</Subsystem>
    <EFDB_Topic>ATSpectrograph_command_changeFilter</EFDB_Topic>
    <Description>Change filter.</Description>
    <item>
      <EFDB_Name>filter</EFDB_Name>
      <Description>ID of the filter slot to select corresponding to the markings on the filter wheel (0 through 3)</Description>
      <IDL_Type>long</IDL_Type>
      <Units>unitless</Units>
      <Count>1</Count>
    </item>
    <item>
      <EFDB_Name>name</EFDB_Name>
      <Description>Name of the filter to select. Command gets rejected if both are set.</Description>
      <IDL_Type>string</IDL_Type>
      <IDL_Size>256</IDL_Size>
      <Units>unitless</Units>
      <Count>1</Count>
    </item>
  </SALCommand>
  <SALCommand>
    <Subsystem>ATSpectrograph</Subsystem>
    <EFDB_Topic>ATSpectrograph_command_changeDisperser</EFDB_Topic>
    <Description>Change disperser.</Description>
    <item>
      <EFDB_Name>disperser</EFDB_Name>
      <Description>ID of the disperser/grating slot to select corresponding to the markings on the disperser wheel (0 through 3)</Description>
      <IDL_Type>long</IDL_Type>
      <Units>unitless</Units>
      <Count>1</Count>
    </item>
    <item>
      <EFDB_Name>name</EFDB_Name>
      <Description>Name of the grating to select. Command gets rejected if both are set.</Description>
      <IDL_Type>string</IDL_Type>
      <IDL_Size>256</IDL_Size>
      <Units>unitless</Units>
      <Count>1</Count>
    </item>
  </SALCommand>
  <SALCommand>
    <Subsystem>ATSpectrograph</Subsystem>
    <EFDB_Topic>ATSpectrograph_command_moveLinearStage</EFDB_Topic>
    <Description>Move the linear stage.</Description>
    <item>
      <EFDB_Name>distanceFromHome</EFDB_Name>
      <Description>The distance from home.</Description>
      <IDL_Type>double</IDL_Type>
      <Units>mm</Units>
      <Count>1</Count>
    </item>
  </SALCommand>
  <SALCommand>
    <Subsystem>ATSpectrograph</Subsystem>
    <EFDB_Topic>ATSpectrograph_command_homeLinearStage</EFDB_Topic>
    <Description>Home linear stage.</Description>
  </SALCommand>
  <SALCommand>
    <Subsystem>ATSpectrograph</Subsystem>
    <EFDB_Topic>ATSpectrograph_command_stopAllAxes</EFDB_Topic>
    <Description>Stop motion on all elements.</Description>
  </SALCommand>
</SALCommandSet>
