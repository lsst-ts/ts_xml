<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="http://lsst-sal.tuc.noao.edu/schema/SALEventSet.xsl"?>
<SALEventSet xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://lsst-sal.tuc.noao.edu/schema/SALEventSet.xsd">

<!--Subset of standard CSC events (LOVE is not a CSC, but use what might be useful)-->
<SALEvent>
    <Subsystem>LOVE</Subsystem>
    <EFDB_Topic>LOVE_logevent_logLevel</EFDB_Topic>
    <Alias>logLevel</Alias>
    <Description>The current logging level.</Description>
    <item>
        <EFDB_Name>level</EFDB_Name>
        <Description>Current logging level, a Python logging level: error=40, warning=30, info=20, debug=10.</Description>
        <IDL_Type>int</IDL_Type>
        <Units>unitless</Units>
        <Count>1</Count>
    </item>
</SALEvent>
<SALEvent>
    <Subsystem>LOVE</Subsystem>
    <EFDB_Topic>LOVE_logevent_logMessage</EFDB_Topic>
    <Alias>logMessage</Alias>
    <Description>A log message.</Description>
    <item>
        <EFDB_Name>level</EFDB_Name>
        <Description>Message level, a Python logging level: error=40, warning=30, info=20, debug=10.</Description>
        <IDL_Type>int</IDL_Type>
        <Units>unitless</Units>
        <Count>1</Count>
    </item>
    <item>
        <EFDB_Name>message</EFDB_Name>
        <Description>Log message.</Description>
        <IDL_Type>string</IDL_Type>
        <IDL_Size>1</IDL_Size>
        <Units>unitless</Units>
        <Count>1</Count>
    </item>
    <item>
        <EFDB_Name>traceback</EFDB_Name>
        <Description>Exception traceback; "" if not an exception.</Description>
        <IDL_Type>string</IDL_Type>
        <IDL_Size>1</IDL_Size>
        <Units>unitless</Units>
        <Count>1</Count>
    </item>
    <item>
        <EFDB_Name>filePath</EFDB_Name>
        <Description>Path to source file.</Description>
        <IDL_Type>string</IDL_Type>
        <IDL_Size>1</IDL_Size>
        <Units>unitless</Units>
        <Count>1</Count>
    </item>
    <item>
        <EFDB_Name>functionName</EFDB_Name>
        <Description>Function or method name.</Description>
        <IDL_Type>string</IDL_Type>
        <IDL_Size>1</IDL_Size>
        <Units>unitless</Units>
        <Count>1</Count>
    </item>
    <item>
        <EFDB_Name>lineNumber</EFDB_Name>
        <Description>Line number in the file specified by filePath.</Description>
        <IDL_Type>long</IDL_Type>
        <Units>unitless</Units>
        <Count>1</Count>
    </item>
    <item>
        <EFDB_Name>process</EFDB_Name>
        <Description>Process ID.</Description>
        <IDL_Type>long</IDL_Type>
        <IDL_Size>1</IDL_Size>
        <Units>unitless</Units>
        <Count>1</Count>
    </item>
</SALEvent>
<!--End subset of standard CSC events-->

<SALEvent>
    <Subsystem>LOVE</Subsystem>
    <EFDB_Topic>LOVE_logevent_observingLog</EFDB_Topic>
    <Alias>observingLog</Alias>
    <Description>A message for the observing log.</Description>
    <item>
        <EFDB_Name>message</EFDB_Name>
        <Description>The message.</Description>
        <IDL_Type>string</IDL_Type>
        <IDL_Size>1</IDL_Size>
        <Units>unitless</Units>
        <Count>1</Count>
    </item>
    <item>
        <EFDB_Name>user</EFDB_Name>
        <Description>Who is the message from?</Description>
        <IDL_Type>string</IDL_Type>
        <IDL_Size>1</IDL_Size>
        <Units>unitless</Units>
        <Count>1</Count>
    </item>
</SALEvent>

</SALEventSet>
