<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="http://lsst-sal.tuc.noao.edu/schema/SALCommandSet.xsl"?>
<SALCommandSet xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://lsst-sal.tuc.noao.edu/schema/SALCommandSet.xsd">
  <SALCommand>
    <Subsystem>ATWhiteLight</Subsystem>
    <EFDB_Topic>ATWhiteLight_command_powerLightOn</EFDB_Topic>
    <item>
      <EFDB_Name>power</EFDB_Name>
      <Description>turns light on</Description>
      <IDL_Type>boolean</IDL_Type>
      <Units>unitless</Units>
      <Count>1</Count>
    </item>
  </SALCommand>
  <SALCommand>
    <Subsystem>ATWhiteLight</Subsystem>
    <EFDB_Topic>ATWhiteLight_command_powerLightOff</EFDB_Topic>
    <item>
      <EFDB_Name>power</EFDB_Name>
      <Description>turns light off</Description>
      <IDL_Type>boolean</IDL_Type>
      <Units>unitless</Units>
      <Count>1</Count>
    </item>
  </SALCommand>
  <SALCommand>
    <Subsystem>ATWhiteLight</Subsystem>
    <EFDB_Topic>ATWhiteLight_command_emergencyPowerLightOff</EFDB_Topic>
    <item>
      <EFDB_Name>power</EFDB_Name>
      <Description>immediately turns light off without regard for minimum warmup time constraint</Description>
      <IDL_Type>boolean</IDL_Type>
      <Units>unitless</Units>
      <Count>1</Count>
    </item>
  </SALCommand>
  <SALCommand>
    <Subsystem>ATWhiteLight</Subsystem>
    <EFDB_Topic>ATWhiteLight_command_setLightPower</EFDB_Topic>
    <item>
      <EFDB_Name>power</EFDB_Name>
      <Description>Power intensity, it could a value between 800 to 1200W. Any value under this range will power the light off safely.</Description>
      <IDL_Type>float</IDL_Type>
      <Units>W</Units>
      <Count>1</Count>
    </item>
  </SALCommand>
  <SALCommand>
    <Subsystem>ATWhiteLight</Subsystem>
    <EFDB_Topic>ATWhiteLight_command_setChillerTemperature</EFDB_Topic>
    <item>
      <EFDB_Name>temperature</EFDB_Name>
      <Description>sets the target temp for the chiller system (celsius)</Description>
      <IDL_Type>float</IDL_Type>
      <Units>degree</Units>
      <Count>1</Count>
    </item>
  </SALCommand>
  <SALCommand>
    <Subsystem>ATWhiteLight</Subsystem>
    <EFDB_Topic>ATWhiteLight_command_startCooling</EFDB_Topic>
    <item>
      <EFDB_Name>powerOn</EFDB_Name>
      <Description>activates the chiller</Description>
      <IDL_Type>boolean</IDL_Type>
      <Units>second</Units>
      <Count>1</Count>
    </item>
  </SALCommand>
  <SALCommand>
    <Subsystem>ATWhiteLight</Subsystem>
    <EFDB_Topic>ATWhiteLight_command_stopCooling</EFDB_Topic>
    <item>
      <EFDB_Name>powerOffTime</EFDB_Name>
      <Description>disables the chiller</Description>
      <IDL_Type>float</IDL_Type>
      <Units>second</Units>
      <Count>1</Count>
    </item>
  </SALCommand>
</SALCommandSet>
